#include <iostream>
using namespace std;
#define size 100
struct Temp {
string day;
float temp;
};
//bubble sort function
void bubbleSort(Temp arr[],int n) {
for (int i=0; i<n-1; i++) {
for (int j=0; j<n-i-1; j++) {
if (arr[j].temp > arr[j+1].temp) {
Temp t= arr[j];
arr[j]= arr[j+1];
arr[j+1]= t;
}
}
}
}
int main() {
int n;
cout<<"Enter number of days : ";
cin>>n;
Temp temps[size]; //max size 100
//taking input from user
for (int i=0; i<n; i++) {
cout<<"Enter day : ";
cin>>temps[i].day;
cout<<"Enter temperature : ";
cin>>temps[i].temp;
}
//bubble sort
bubbleSort(temps,n);
//display sorted temp
cout << "\nSorted Temperatures (Ascending):\n";
for (int i=0; i<n; i++) {
cout<<temps[i].day<<" : "<<temps[i].temp<<"C\n";
}
return 0;
}



